<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:weightSum="20"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageMarketSetup"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/market_setup_random" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="19"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:id="@+id/textMarketSetupName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#333"
            tools:text="random market setup"
            tools:textAllCaps="true"
            tools:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/textGemCardDistribution"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="start|top"
            tools:text="Gems: 3x ANY"/>

        <TextView
            android:id="@+id/textRelicCardDistribution"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="start|top"
            tools:text="Relics: 2x ANY"/>

        <TextView
            android:id="@+id/textSpellCardDistribution"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="start|top"
            tools:text="Spells: 4x ANY"/>
    </LinearLayout>
</LinearLayout>